{
  "name": "algorithms",
  "version": "1.0.0",
  "description": "Algorithms study cases",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "esbuild --platform=node --target=node16 --outdir=dist --outbase=packages --tree-shaking=true --minify --log-level=silent packages/**/*.ts",
    "watch": "esbuild --platform=node --target=node16 --outdir=dist --outbase=packages --tree-shaking=true --minify --log-level=silent --watch packages/**/*.ts",
    "lint": "eslint --ext .ts ./packages",
    "lint:fix": "eslint --fix --ext .ts ./packages",
    "format": "prettier \"./packages/**/*.ts\"",
    "format:fix": "prettier --write \"./packages/**/*.ts\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diegohdk/algorithms.git"
  },
  "author": "diegohdk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/diegohdk/algorithms/issues"
  },
  "homepage": "https://github.com/diegohdk/algorithms#readme",
  "devDependencies": {
    "@types/node": "18.6.3",
    "@typescript-eslint/eslint-plugin": "5.31.0",
    "esbuild": "0.14.51",
    "eslint": "8.20.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.1",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  }
}
